:root {
	--nord-background: #242933;
	--nord-canvas: #2E3440;
	--nord-inactive: #3B4252;
	--nord-active: #434C5e;
	--nord3: #4C566A;

	--nord-text: #D8DEE9;
	--nord-subtle: #E5E9F0;
	--nord-important: #ECEFF4;

	--nord-primary2: #8FBCBB;
	--nord-primary1: #88C0D0;
	--nord-secondary: #81A1C1;
	--nord-teriary: #5E81AC;

	--nord-red: #BF616A;
	--nord-orange: #D08770;
	--nord-yellow: #EBCB8B;
	--nord-green: #A3BE8C;
	--nord-purple: #B48EAD;
}

.flex-container {
	display: flex;
	/*flex-direction: row;
	flex-wrap: wrap;*/
	flex-flow: row wrap;
	justify-content: center;
	align-items: flex-start;
	align-content: space-around;
}

.content {
	width: 35%;
	min-width: 720px;
	max-width: 1920px;
	background-color: var(--nord-canvas);
}

body {
	text-align: left;
	color: var(--nord-text);
	background-color: var(--nord-background);
}
